<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.bmc.suchane_svamitva.view_model.DPR_FPR_LaunchActivityViewModel" />
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.ShowCitizenFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:padding="2sp"
                                android:text="@string/district"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                            <com.bmc.suchane_svamitva.utils.customfonts.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:padding="2sp"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <com.bmc.suchane_svamitva.utils.customfonts.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/district"
                                android:inputType="text"
                                android:maxLength="12"
                                android:padding="2sp"
                                android:text="@{viewModel.districtName}"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="16sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:padding="2sp"
                                android:text="@string/taluk"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                            <com.bmc.suchane_svamitva.utils.customfonts.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:padding="2sp"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <com.bmc.suchane_svamitva.utils.customfonts.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/taluk"
                                android:inputType="text"
                                android:maxLength="12"
                                android:padding="2sp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="16sp"
                                android:text="@{viewModel.talukName}" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:padding="2sp"
                                android:text="@string/hobli"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                            <com.bmc.suchane_svamitva.utils.customfonts.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:padding="2sp"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp" />


                            <com.bmc.suchane_svamitva.utils.customfonts.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/hobli"
                                android:inputType="text"
                                android:maxLength="12"
                                android:padding="2sp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="16sp"
                                android:text="@{viewModel.hobliName}" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:padding="2sp"
                                android:text="@string/village"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                            <com.bmc.suchane_svamitva.utils.customfonts.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:padding="2sp"
                                android:text="@string/colon"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <com.bmc.suchane_svamitva.utils.customfonts.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/village"
                                android:inputType="text"
                                android:maxLength="12"
                                android:padding="2sp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="16sp"
                                android:text="@{viewModel.villageName}" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                app:cardCornerRadius="4dp">

                <info.hoang8f.android.segmented.SegmentedGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/pending"
                    android:onCheckedChanged="@{viewModel::onTypeCheckChanged}"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pending"
                        style="@style/RadioButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/pending"
                        android:textAlignment="center" />

                    <RadioButton
                        android:id="@+id/completed"
                        style="@style/RadioButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/served"
                        android:textAlignment="center" />
                </info.hoang8f.android.segmented.SegmentedGroup>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:onQueryTextListener="@{viewModel.onQueryTextListener}"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search Name/ID/Mobile/Type" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_list_header"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="@string/sl_no" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_list_header"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="@string/chalta_no" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_list_header"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/municipal_gpfd" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_list_header"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/owner_name"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_list_header"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/action"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adapter="@{viewModel.ownerAdapter}"
                app:data="@{viewModel.ownerList}" />
        </LinearLayout>
    </FrameLayout>
</layout>
